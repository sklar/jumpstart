# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{html,hbs}]
indent_size = 4
indent_style = tab

[*.{css,scss}]
indent_size = 4
indent_style = space

[*.{coffee,js}]
indent_size = 4
indent_style = tab

[*.{yaml}]
indent_size = 4
indent_style = tab
